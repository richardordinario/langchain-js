{
  "compilerOptions": {
    "target": "ES2020",
    "module": "nodenext",
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "./build",
    "skipLibCheck": true,
    "moduleResolution": "nodenext",
    "noEmit": true,
    "allowImportingTsExtensions": true,
  },
  "include": [
    "src",
    "src/server.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "ts-node": {
    "esm": true  
  },
  "paths": {
    "@/*": ["./*"]
  }
}